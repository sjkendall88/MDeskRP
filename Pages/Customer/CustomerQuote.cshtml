@page
@model MDeskRP.Pages.Customer.CustomerQuoteModel
@{
    ViewData["Title"] = "CustomerQuote";
}

<h1>CustomerQuote</h1>
<div>
    <h4>Customer</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor()
        </dt>
        <dd>
            @Html.DisplayFor(model => model.DeskQuote.DeskQuoteID)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.DeskQuote.Customer.FirstName)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.DeskQuote.Customer.FirstName)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.DeskQuote.Customer.LastName)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.DeskQuote.Customer.LastName)
        </dd>
    </dl>
    <div class="row">
        <div class="col-md-4">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="DeskQuote.Id" />
                <div class="form-group">
                    <label asp-for="DeskSpecs.DeskType" class="control-label">Desktop material</label>
                    <select asp-for="DeskSpecs.DeskType" class="form-control" asp-items="ViewBag.DeskTypeCode">
                    </select>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-page="DeskQuoteDesks" asp-route-id="@Model.Customer.Id">
            Back to Customer Desks
        </a>
    </div>
</div>
