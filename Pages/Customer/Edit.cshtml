@page
@model MDeskRP.Pages.Customer.EditModel

@{
    ViewData["Title"] = "Edit";
}

    <h1>Edit Customer Record</h1>

@*<h4>Customer Record</h4>*@
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Customer.CustomerID" />
            <div class="form-group">
                <label asp-for="Customer.FirstName" class="control-label"></label>
                <input asp-for="Customer.FirstName" class="form-control" />
                <span asp-validation-for="Customer.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Customer.LastName" class="control-label"></label>
                <input asp-for="Customer.LastName" class="form-control" />
                <span asp-validation-for="Customer.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Customer.PhoneNumber" class="control-label"></label>
                <input asp-for="Customer.PhoneNumber" class="form-control" />
                <span asp-validation-for="Customer.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Customer.StreetAddress" class="control-label"></label>
                <input asp-for="Customer.StreetAddress" class="form-control" />
                <span asp-validation-for="Customer.StreetAddress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Customer.CityAddress" class="control-label"></label>
                <input asp-for="Customer.CityAddress" class="form-control" />
                <span asp-validation-for="Customer.CityAddress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Customer.StateAddress" class="control-label"></label>
                <input asp-for="Customer.StateAddress" class="form-control" />
                <span asp-validation-for="Customer.StateAddress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Customer.OrderDate" class="control-label"></label>
                <input asp-for="Customer.OrderDate" class="form-control" />
                <span asp-validation-for="Customer.OrderDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-success btn-main m-1" role="button" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index" class="btn btn-mine btn-main m-1" role="button">Customer List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
